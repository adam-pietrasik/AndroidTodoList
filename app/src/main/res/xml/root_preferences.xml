<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Hide completed tasks">

        <SwitchPreference
            app:key="hide_completed_tasks"
            app:title="Hide completed tasks"
            />

    </PreferenceCategory>

    <PreferenceCategory app:title="Show categories">

        <ListPreference
            app:key="categories"
            app:title="Categories"
            app:summary="Choose which categories to display"
            app:entries="@array/category_keys"
            app:entryValues="@array/category_values"
            />

    </PreferenceCategory>

    <PreferenceCategory app:title="Notifications">

        <ListPreference
            app:key="notifications"
            app:title="Notification timer"
            app:entries="@array/notfication_keys"
            app:entryValues="@array/notfication_values"
            />

    </PreferenceCategory>


</PreferenceScreen>